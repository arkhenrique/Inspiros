<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:backgroundTint="#e0f7fa"
    tools:context="com.example.admin.inspiros.HomeActivity">


    <ImageView
        app:srcCompat="@drawable/logo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:id="@+id/button"
        android:background="@drawable/avatar"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"
        android:onClick="btnLoja"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:background="@drawable/exercicios"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/btnExercicio"
        android:onClick="btnExercicio"/>

    <Button
        android:layout_width="130dp"
        android:layout_height="25dp"
        android:background="@drawable/jogos"

        android:adjustViewBounds="true"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="180dp"
        android:id="@+id/btnMiniGame"
        android:onClick="btnMiniGame"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:adjustViewBounds="true"
        android:background="@drawable/crise"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="180dp"
        android:id="@+id/btnAlarme"
        android:onClick="btnAlarme"/>

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/info"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="300dp"
        android:id="@+id/btnInfo"
        android:onClick="btnInfo"/>

    <ImageView
        app:srcCompat="@drawable/cavaleiro"
        android:id="@+id/cavaleiro"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="230dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/petname" />

    <ImageView
        app:srcCompat="@drawable/moedas"
        android:id="@+id/modeas"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="250dp"
        />
    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="525dp"
        android:layout_marginLeft="285dp"
        android:id="@+id/moedas"
        android:gravity="center"
        android:textSize="20sp"/>


    <Button
        android:background="@drawable/inspiro_1"
        android:id="@+id/inspiro_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="10dp"
        android:onClick="btnInspiro"/>
    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="525dp"
        android:layout_marginLeft="285dp"
        android:id="@+id/inspironame"
        android:gravity="center"
        android:textSize="20sp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/cavaleiro"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/btnMiniGame"
        android:layout_alignEnd="@+id/btnMiniGame"
        android:layout_alignLeft="@+id/modeas"
        android:layout_alignStart="@+id/modeas"
        android:layout_alignBottom="@+id/cavaleiro">

        <ProgressBar
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="270"
            android:minHeight="10dp"
            android:maxHeight="10dp"
            android:maxWidth="500dp"
            android:minWidth="500dp"
            android:id="@+id/progressBar1" />
    </FrameLayout>


</RelativeLayout>
